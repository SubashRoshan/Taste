  <% layout('layouts/boilerplate')%>

  <div id="cluster-map"></div>

   <div class="container">
      <h1></h1>

      <h1 >All cafes  </h1>

      <% for (let cafe of cafes){%>
      <div class="card mb-3">
          <div class="row">
            <div class="col-md-4">
                 <%if(cafe.images.length) {%>
                   <img class="img-fluid" alt="" src="<%=cafe.images[0].url%>">
                    <% }else {%>
                    <img class="img-fluid" alt=""
                      src="https://res.cloudinary.com/drspqsmbw/image/upload/v1605625468/Taste/alexander-gilbertson-oOiWArPH5qQ-unsplash_mjjaa2.jpg">
                    <% } %>
               </div>
               <div class="col-md-8">
                   <div class="card-body">
                       <h5 class="card-title"><%= cafe.title %> </h5>

                       <p class="card-text"><%= cafe.description %></p>
                        <p class="card-text">
                           <small class="text-muted"><%= cafe.location%></small>
                        </p>
                       <a class="btn btn-primary" href="/cafes/<%=cafe._id%>">View <%=cafe.title%></a>
                   </div>
               </div>
           </div>
       </div>
       <% }%>
   </div>
   <script>
       const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
       const cafes = { features: <%- JSON.stringify(cafes) %>}
   </script>

    <script src="/javascripts/clusterMap.js"></script>
